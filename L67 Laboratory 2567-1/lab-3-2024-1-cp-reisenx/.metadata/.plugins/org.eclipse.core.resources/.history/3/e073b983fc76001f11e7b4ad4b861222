package logic.ghost;

public abstract class Ghost {
	// Class Properties
	private int hp;
	
	// Constructor Method
	public Ghost (int hp) {
		this.hp = hp;
	}
	
	// isDestroyed Method
	public boolean isDestroyed() {
		return this.getHp() <= 0;
	}
	
	// Methods
	public int getHp() {
		return this.hp;
	}
}